{
  "swagger": "2.0",
  "info": {
    "title": "METAWALL",
    "description": "METAWALL 的 API 文件",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Posts",
      "description": "貼文相關"
    },
    {
      "name": "Users",
      "description": "會員相關"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [],
  "produces": [],
  "paths": {
    "/posts/": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "取得貼文",
        "description": "",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "關鍵字",
            "type": "string"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "排序方式，desc 為新至舊，asc 為舊至新",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "成功取得貼文",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "新增貼文",
        "description": "",
        "parameters": [
          {
            "name": "parameter_name",
            "in": "body",
            "description": "貼文資料",
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "example": "貼文內容"
                },
                "image": {
                  "type": "string",
                  "example": "貼文圖片連結"
                }
              },
              "required": [
                "content"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "新增貼文成功",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          },
          "400": {
            "description": "新增貼文失敗",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "註冊會員",
        "description": "",
        "parameters": [
          {
            "name": "parameter_name",
            "in": "body",
            "description": "會員資料",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "暱稱"
                },
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "123456"
                }
              },
              "required": [
                "name",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "註冊會員成功",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          },
          "400": {
            "description": "註冊會員失敗",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Posts": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string",
          "example": "來新增一筆資料吧"
        },
        "image": {
          "type": "string",
          "example": "https://...."
        },
        "user": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "example": "123456789"
            },
            "name": {
              "type": "string",
              "example": "小明"
            },
            "avatar": {
              "type": "string",
              "example": "https://...."
            }
          }
        },
        "createdAt": {
          "type": "string",
          "example": "2022-05-03T09:00:00.226Z"
        }
      }
    },
    "Users": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "會員暱稱"
        },
        "email": {
          "type": "string",
          "example": "test@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        },
        "avatar": {
          "type": "string",
          "example": "https://..."
        },
        "gender": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "object",
          "properties": {
            "field": {
              "type": "string",
              "example": "錯誤訊息"
            }
          }
        }
      }
    }
  }
}